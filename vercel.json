{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "static/**/*",
          "fonts/**/*",
          "dashboard/**/*",
          "dash-app/**/*",
          "login/**/*",
          "register/**/*",
          "file/**/*",
          "uploads/**/*",
          "lib/**/*",
          "api/**/*",
          "about/**/*",
          "assets/**/*",
          "ic/**/*",
          "pricing/**/*",
          "privacy/**/*",
          "profile/**/*",
          "public/**/*",
          "verify/**/*",
          "404.html",
          "index.html"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "ALLOWED_ORIGINS": "https://og.email,https://marit.al,https://www.og.email,https://www.marit.al"
  }
}
